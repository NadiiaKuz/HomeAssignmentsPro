<Window x:Class="Lesson4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="565" Height="67" TextAlignment="Center" FontSize="22"/>
        <Button x:Name="EnterButton" Content="Enter" HorizontalAlignment="Center" Margin="0,324,0,0" VerticalAlignment="Top" Height="43" Width="202" FontSize="18" Click="EnterButton_Click"/>
        <Label Content="Enter your e-mail address: " HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top" Height="43" Width="321" FontSize="20" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
